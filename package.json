{
  "scripts": {
    "start": "NODE_ENV=development node server",
    "lint": "eslint . --ext js,mjs",
    "prettier": "prettier --write .",
    "test": "TZ=America/New_York NODE_ENV=test TEST=all mocha --exit",
    "deploy": "ssh database 'cd /home/user/projects/nanodb && git pull && source ~/.nvm/nvm.sh && nvm use 22 && yarn install && pm2 reload server.pm2.config.js --env production'",
    "export:schema": "ssh database 'pg_dump -U nanodb_user -h localhost --dbname=nanodb_production --schema-only --clean --no-owner --if-exists --file=/tmp/schema.postgres.sql --no-tablespaces' && scp database:/tmp/schema.postgres.sql ./db/ && awk 'NR==17{print \"SET search_path = public;\"} {print}' ./db/schema.postgres.sql > ./db/schema.tmp.sql && mv ./db/schema.tmp.sql ./db/schema.postgres.sql"
  },
  "dependencies": {
    "bignumber.js": "^9.0.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.10.5",
    "debug": "^4.3.1",
    "deep-extend": "^0.6.0",
    "express": "^4.17.1",
    "express-jwt": "^8.4.1",
    "fs-extra": "^11.1.1",
    "got": "13.0.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "morgan": "^1.10.0",
    "morgan-debug": "^2.0.0",
    "mysql": "^2.18.1",
    "nanocurrency": "^2.5.0",
    "neat-csv": "^7.0.0",
    "node-cache": "^5.1.2",
    "p-queue": "7.3.4",
    "pg": "^8.10.0",
    "reconnecting-websocket": "^4.4.0",
    "ws": "^8.13.0",
    "yargs": "^17.7.2"
  },
  "imports": {
    "#common": "./common.mjs",
    "#db": "./db/index.mjs",
    "#constants": "./constants.mjs",
    "#api": "./api/index.mjs",
    "#config": "./config.js",
    "#api/*": "./api/*"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/eslint-parser": "^7.17.0",
    "chai": "4.3.7",
    "chai-http": "4.4.0",
    "eslint": "8.42.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "mocha": "^10.4.0",
    "prettier": "^2.8.8",
    "prettier-plugin-sql": "^0.14.0"
  }
}
